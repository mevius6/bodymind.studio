block content
  .c-carousel(style="--side-fade: 24")
    each coach, index in coaches
      section.c-carousel__item(id=`section-id-${index}`)

        .c-carousel__item-meta
          h2.fs-h2
            | #{coach.nameFirst}#[br]
            | #{coach.nameLast}
          p.fs-bs
            | #{coach.occupation}

          if coach.videoId !== ''
            lite-vimeo(videoid=coach.videoId)

        .c-carousel__item-img
          figure.lazy(style="--bg-position: top; --attachment: local; max-inline-size: 42rem")

    .c-carousel__controls
      each i in Array.from(Array(total).keys())
        a(href=`#section-id-${i}`)

block scripts
  script(src="../video/lite-vimeo-embed.js")
  script(src="../js/lazy-load.js")
