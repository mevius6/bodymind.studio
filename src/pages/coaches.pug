append head
  link(rel="stylesheet" type="text/css" href="../video/lite-vimeo-embed.css")
  script.
    Modernizr.on('webp', function(result) {
      const items = [...document.querySelectorAll('.c-carousel__item')];
      items.forEach((item) => {
        item.setAttribute("data-image-set", "1");
      });
    });

